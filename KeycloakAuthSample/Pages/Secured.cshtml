@page
@model SecuredModel
@{
    ViewData["Title"] = "Secured page";
    var realm = "myrealm";
    var publicKey = "";
    var tokenService = "http://localhost:8080/realms/myrealm/protocol/openid-connect";
    var accountService = "http://localhost:8080/realms/myrealm/account";
}

<h2>Welcome to the Secured Page</h2>
<p>This page is protected and requires authentication.</p>

<p>@Model.Message</p>

<h3>Configuration Details</h3>
<ul>
    <li><strong>Realm:</strong> @realm</li>
    <li><strong>Public Key:</strong> @publicKey</li>
    <li><strong>Token Service:</strong> <a href="@tokenService">@tokenService</a></li>
    <li><strong>Account Service:</strong> <a href="@accountService">@accountService</a></li>
</ul>

